<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mounacheikhna.challenge.ui.main.MainActivity">

    <com.mounacheikhna.challenge.ui.main.stops.StopsView
        android:id="@+id/stops_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/closest_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="location_pin.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_centerVertical="true"
        />


</android.support.constraint.ConstraintLayout>
