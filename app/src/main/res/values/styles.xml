<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="OverflowMenu">
        <item name="android:background">?selectableItemBackground</item>
        <item name="srcCompat">@drawable/ic_more_24dp</item>
    </style>

    <style name="Challenge.TextAppearance.Body1.Primary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Challenge.TextAppearance.Body1.Secondary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
